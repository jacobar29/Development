<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="wordFinder.wordFinderController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <BorderPane>

        <center>
            <VBox>
                <Label text="Enter text to be searched here"/>
                <TextArea fx:id="textToSearch"/>

                <Label text="Enter words to search for here separated by commas:" />
                <TextArea fx:id="keyWordArea"/>
                <Button text="search" onAction="#handleButton"/>

                <Label text="Words found: "/>
                <TextArea fx:id="results" visible="false"/>
            </VBox>
        </center>

    </BorderPane>

</GridPane>